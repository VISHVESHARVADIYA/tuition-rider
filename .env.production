# -----------------------------------------------------------------------------
# App - Don't add "/" in the end of the url
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars-long

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
AUTH_SECRET="generate_using_openssl_rand_-base64_32"

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://your_actual_username:your_actual_password@your_actual_host:5432/your_actual_database"
DIRECT_URL="postgresql://your_actual_username:your_actual_password@your_actual_host:5432/your_actual_database"

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY="your_resend_api_key"
EMAIL_FROM="Tuition Rider <no-reply@your-domain.com>"

# -----------------------------------------------------------------------------
# Supabase (if using)
# -----------------------------------------------------------------------------
SUPABASE_URL="your_supabase_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"
NEXT_PUBLIC_SUPABASE_URL="your_supabase_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"

# -----------------------------------------------------------------------------
# Subscriptions (if using Stripe)
# -----------------------------------------------------------------------------
STRIPE_API_KEY="your_stripe_api_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"

NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PLAN_ID="your_stripe_pro_monthly_plan_id"
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PLAN_ID="your_stripe_pro_yearly_plan_id"

NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PLAN_ID="your_stripe_business_monthly_plan_id"
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PLAN_ID="your_stripe_business_yearly_plan_id"

# -----------------------------------------------------------------------------
# UploadThing
# -----------------------------------------------------------------------------
UPLOADTHING_SECRET="your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GA_TRACKING_ID="your_ga_tracking_id"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_STRIPE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# -----------------------------------------------------------------------------
# Email (SMTP) - Alternative Configuration
# -----------------------------------------------------------------------------
SMTP_FROM=noreply@your-domain.com
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# -----------------------------------------------------------------------------
# Authentication Providers (if used)
# -----------------------------------------------------------------------------
# Google
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub
# GITHUB_ID=your-github-client-id
# GITHUB_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Sentry Configuration (if used)
# -----------------------------------------------------------------------------
# SENTRY_DSN=your-sentry-dsn

# -----------------------------------------------------------------------------
# Additional API Keys (if used)
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=your-openai-api-key

# Production Environment Variables

# Disable WhatsApp notifications in production to prevent fetch errors
SKIP_WHATSAPP_NOTIFICATIONS=true

# Set this if you have valid WhatsApp credentials configured
# WHATSAPP_ACCESS_TOKEN=your_valid_token
# WHATSAPP_PHONE_NUMBER_ID=your_phone_id
# ADMIN_WHATSAPP_NUMBER=your_admin_number
