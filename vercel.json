{
  "buildCommand": "next build --no-lint",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/(about|blog|contact|courses|curriculum|faq|privacy-policy|resources|reviews|services|terms)(.*)", "destination": "/marketing/$1$2" },
    { "source": "/", "destination": "/marketing" }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_PUBLIC_APP_VERSION": "0.1.0"
  }
} 